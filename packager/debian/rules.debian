package=wdune
DESTDIR?=$$pwd/debian/${package}/usr
package_docs=wdune-docs
DOCDIR?=debian/${package_docs}/usr

build:
	$(checkdir)
	./configure --with-debian --with-optimization --prefix=/usr --with-uninstallcomment="dpkg -P wdune" --without-devil --with-helpurl="/usr/share/doc/$(package)-docs/docs" --with-protobaseurl="/usr/share/doc/$(package)-docs/docs" --with-vrmlbrowser=view3dscene --with-checkincommand="ci" --with-imageeditor="pinta" --with-imageeditor4kids="gpaint" --with-soundeditor=audacity
	$(MAKE) -j4
	touch build

clean:
	$(checkdir)
	rm -f build
	-$(MAKE) -i realclean
	rm -rf *~ debian/DEBIAN debian/*~ debian/files* debian/substvars

binary-indep: checkroot build
	$(checkdir)
# There are no architecture-independent files to be uploaded
# generated by this package.  If there were any they would be
# made here.

binary-arch: checkroot build
	$(checkdir)
	install -m 755 debian/postinst debian/prerm $(DESTDIR)
	cp -a desktop/kde/dune.desktop $(DESTDIR)/share/applications
	cp -a desktop/kde/dune.png $(DESTDIR)/share/pixmaps
	cp -a desktop/kde/dune4kids.desktop $(DESTDIR)/share/applications
	cp -a desktop/kde/dune4kids.png $(DESTDIR)/share/pixmaps
	cp -a desktop/debian/dune.xpm $(DESTDIR)/share/pixmaps
	cp -a packager/debian/menu $(DESTDIR)/lib/menu/white_dune
	install bin/dune ${DESTDIR}/bin/
	dpkg-shlibdeps $(DESTDIR)/bin/dune
	chown -R root.root debian/wdune
	chmod -R g-ws debian/wdune

define checkdir
	test -f src/main.cpp -a -f debian/rules
endef

# Below here is fairly generic really

binary:		binary-indep binary-arch 

checkroot:
	$(checkdir)
	test $$(id -u) = 0

wdune-docs: 
	install -d $(DOCDIR) \
		-d $(DOCDIR)/share/doc/$(package_docs) \
		-d $(DOCDIR)/share/man \
		-d $(DOCDIR)/share/man/man1
	echo $(DOCDIR) debian/wdune-docs/usr/share/doc/wdune-docs
	cp -a debian/copyright $(DOCDIR)/share/doc/$(package_docs)
	cp -a debian/changelog $(DOCDIR)/share/doc/$(package_docs)/changelog.Debian
	(cd $(DOCDIR)/share/doc/$(package_docs) && gzip -9fv changelog.Debian)
	cp -ar docs $(DOCDIR)/share/doc/$(package_docs)
	find $(DOCDIR)/share/doc/$(package_docs) -type f -print | xargs chmod 644
	cp -a man/dune.1 $(DOCDIR)/share/man/man1
	gzip -9f $(DOCDIR)/share/man/man1/dune.1
	dh_testdir
	dh_installdirs  -p$@
	dh_installdocs  -p$@
	dh_installman  -p$@
	dh_fixperms  -p$@
	dh_makeshlibs -p$@
	dh_installdeb  -p$@
	dh_gencontrol  -p$@
	dh_md5sums  -p$@
	dh_builddeb  -p$@

wdune: binary-arch
	dh_testdir -p$@
	dh_testroot -p$@
	dh_prep  -p$@
	dh_installdirs  -p$@
	dh_install -p$@
	dh_link  -p$@
	dh_compress  -p$@
	dh_fixperms  -p$@
	dh_makeshlibs -p$@
	dh_installdeb  -p$@
	dh_gencontrol  -p$@
	dh_md5sums  -p$@
	dh_builddeb  -p$@

.PHONY: binary binary-arch binary-indep clean checkroot install
